{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Jellyfin Web UI",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"serve"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/ui"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Install UI Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"options": {
				"cwd": "${workspaceFolder}/ui"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Build UI Production",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build:production"],
			"options": {
				"cwd": "${workspaceFolder}/ui"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}